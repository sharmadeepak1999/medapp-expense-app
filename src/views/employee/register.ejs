<%- include("../partials/header.ejs") %>
  <div class="container p-5">
    <div class="card">
      <div class="card-header">
        <h5>Employee Registration <a class="btn btn-primary float-right" href="/employee/login">Login</a></h5>
      </div>
      <div class="card-body">
        <form action="/employee/register" method="post">
            <div class="form-group">
              <label for="name">Employee Name</label>
              <input type="text" class="form-control" name="name" placeholder="Enter name" value="<%= name %>" required>
            </div>
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" name="email" placeholder="Enter email" value="<%= email %>" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
              <label for="confPassword">Confirm Password</label>
              <input type="password" class="form-control" name="confPassword" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
<%- include("../partials/footer.ejs") %>